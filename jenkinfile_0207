pipeline {
    agent any
    
      tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "Maven"
    }
    stages {
        stage ('Build Servlet Project') {
            steps {
               
               sh 'mvn clean package'
            }

           post{
              success{
                echo 'Now Archiving ....'

              archiveArtifacts artifacts : '**/*.war'
           }
           }
        }

      


    }
}
